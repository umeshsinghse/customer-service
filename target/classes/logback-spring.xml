<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include default Spring Boot logging configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- CloudWatch Appender for Application Logs -->
    <appender name="CLOUDWATCH_APP" class="ca.pjer.logback.AwsLogsAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
        <logGroupName>/aws/eks/customer-service/application</logGroupName>
        <logStreamUuidPrefix>customer-service-app-</logStreamUuidPrefix>
        <logRegion>us-east-1</logRegion>
        <maxBatchLogEvents>50</maxBatchLogEvents>
        <maxFlushTimeMillis>30000</maxFlushTimeMillis>
        <maxBlockTimeMillis>5000</maxBlockTimeMillis>
        <retentionTimeDays>30</retentionTimeDays>
    </appender>
    
    <!-- CloudWatch Appender for API Access Logs -->
    <appender name="CLOUDWATCH_API" class="ca.pjer.logback.AwsLogsAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
        <logGroupName>/aws/eks/customer-service/api-access</logGroupName>
        <logStreamUuidPrefix>customer-service-api-</logStreamUuidPrefix>
        <logRegion>us-east-1</logRegion>
        <maxBatchLogEvents>50</maxBatchLogEvents>
        <maxFlushTimeMillis>30000</maxFlushTimeMillis>
        <maxBlockTimeMillis>5000</maxBlockTimeMillis>
        <retentionTimeDays>30</retentionTimeDays>
    </appender>
    
    <!-- CloudWatch Appender for Error Logs -->
    <appender name="CLOUDWATCH_ERROR" class="ca.pjer.logback.AwsLogsAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <layout>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n%ex</pattern>
        </layout>
        <logGroupName>/aws/eks/customer-service/errors</logGroupName>
        <logStreamUuidPrefix>customer-service-error-</logStreamUuidPrefix>
        <logRegion>us-east-1</logRegion>
        <maxBatchLogEvents>50</maxBatchLogEvents>
        <maxFlushTimeMillis>30000</maxFlushTimeMillis>
        <maxBlockTimeMillis>5000</maxBlockTimeMillis>
        <retentionTimeDays>90</retentionTimeDays>
    </appender>
    
    <!-- Async wrapper for CloudWatch appenders to improve performance -->
    <appender name="ASYNC_CLOUDWATCH_APP" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CLOUDWATCH_APP"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>
    
    <appender name="ASYNC_CLOUDWATCH_API" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CLOUDWATCH_API"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>
    
    <appender name="ASYNC_CLOUDWATCH_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CLOUDWATCH_ERROR"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>
    
    <!-- Logger for API access logs -->
    <logger name="com.ps.cs.controller" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_API"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_ERROR"/>
    </logger>
    
    <!-- Logger for service layer -->
    <logger name="com.ps.cs.service" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_APP"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_ERROR"/>
    </logger>
    
    <!-- Logger for repository layer -->
    <logger name="com.ps.cs.repository" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_APP"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_ERROR"/>
    </logger>
    
    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_APP"/>
        <appender-ref ref="ASYNC_CLOUDWATCH_ERROR"/>
    </root>
    
    <!-- Profile-specific configurations -->
    <springProfile name="!local">
        <!-- Enable CloudWatch logging for non-local profiles -->
    </springProfile>
    
    <springProfile name="local">
        <!-- Disable CloudWatch for local development -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>