# Example Terraform Variables
# Copy this file to terraform.tfvars and customize the values

# Basic Configuration
aws_region      = "us-east-1"
environment     = "prod"
cluster_name    = "customer-service-cluster"
cluster_version = "1.29"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
allowed_cidr_blocks = [
  "0.0.0.0/0"  # Restrict this in production to your IP ranges
]

# ECR Configuration
ecr_repository_name = "customer-service"

# Node Group Configuration
node_group_instance_types = ["t3.medium", "t3.large"]
node_group_desired_size   = 3
node_group_min_size       = 1
node_group_max_size       = 10

# Feature Flags
enable_cluster_autoscaler           = true
enable_aws_load_balancer_controller = true
enable_metrics_server               = true
enable_cloudwatch_logging           = true

# Logging Configuration
log_retention_days = 30

# GitHub Configuration (update with your repository)
github_repository = "your-org/customer-service"

# Additional Tags
tags = {
  Owner       = "platform-team"
  CostCenter  = "engineering"
  Project     = "customer-service"
  Environment = "production"
}